{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es6",
        "lib": ["es2016", "dom", "es2015"],
        "noImplicitAny": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "dist/types",
        "typeRoots": [
          "node_modules/@types"
        ]
    },
    "include": [
        "src",
        "buildScripts"
    ],
    "exclude":[
        "./src/**/*.test.ts"
    ],
    "awesomeTypescriptLoaderOptions": {
        "useBabel": true
    }
}